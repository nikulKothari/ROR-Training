<div class="row">
  <% if user_signed_in? %>
    <div class="col-sm-12">
      <h3>Welcome, <%= current_user.name %></h3><br/>
    </div>
  <% end %>
  <div class="col-sm-6 mb-4">
    TV Shows
  </div>
  <div class="col-sm-6 mb-4 text-right">
    <%= render partial: 'tv_shows/search' %>
  </div>
  <div class="col-sm-12">
    <table class="table table-striped table-bordered" id="tv-show-listing">
      <thead>
        <tr>
          <td>Show</td>
          <td>Channel Name</td>
          <td>Timings</td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody>
        <% if @tv_shows %>
          <%= render @tv_shows %>
        <% else %>
          <tr>
            <td colspan="4" class="text-center">No shows found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-12 text-right">
  </div>
</div>
